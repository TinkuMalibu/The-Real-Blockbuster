<div class="container w-50 bg-white mb-5 mt-5 p-4">
  <h1 class="text-left">My published VHS</h1>
  <p>Here you can see the movies you put up for rent</p>
    <% Movie.where(user_id: current_user.id).each do |movie| %>
    <div class="card mb-3 m-auto" style="max-width: 800px;">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= cl_image_path movie.poster_url.key %>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title"><%= movie.title %></h5>
            <p class="card-text">Cost: $<%= movie.price %></p>
            <p class="card-text"><small class="text-body-secondary">Last updated 3 mins ago</small></p>
            <%= link_to "Edit your Movie", edit_movie_path(movie), class:"btn btn-success lg mx-2" %>
            <%= link_to movie_path(movie), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
              <i class="fa-solid fa-trash"></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
