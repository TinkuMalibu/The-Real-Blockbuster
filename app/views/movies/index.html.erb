<div class = "container mt-4">
  <div class = "d-flex">
    <div class = "col-6">
      <h3>Movies</h3>
    </div>
      <div class="col-6 text-end">
    </div>
  </div>
  <div class="row">
    <% if @movies.any? %>
      <% @movies.each do |movie| %>
        <div class="co-12 col-sm-6 col-md-4 mb-3">
          <%= link_to movie_path(movie), class:"text-decoration-none" do %>
            <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
              <div class="d-flex flex-column h-100">
                <div class="align-self-center m-auto">
                  <h2 class=""><%= movie.title%></h2>
                </div>
                <div class="align-self-center">
                  <h3 class=""><%= movie.year %></h3>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    <% else %>
      <em>Sorry, no movies found.</em>
    <% end %>
  </div>
</div>
