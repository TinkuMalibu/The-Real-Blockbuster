
<div class="container w-50 shadow bg-white mt-5 p-3 mb-5">
  <%= simple_form_for @movie do |f|%>
    <%= f.input :title %>
    <%= f.label :Price %>
    <div class="input-group">
      <div class="input-group-prepend">
        <span class="input-group-text">$</span>
      </div>
      <%= f.input :price, input_html: { value: '5', readonly: true }, wrapper: false, label: false %>
    </div>
    <%= f.input :director %>
    <%= f.input :synopsis %>
    <%= f.select :year, options_for_select((1900..Time.zone.now.year).map { |year| year }, @movie.year), {}, class:'form-control' %>
    <%= f.label :Genres, "Genres:", class:"mt-3" %>
    <%= f.select :genre, Movie::GENRES %>
    <%= f.input :poster_url, as: :file, class:'form-control' %>
    <%= f.submit 'Create', class:'btn btn-primary mb-4 ' %> <%= link_to 'Back', movies_path, class:"btn btn-warning mb-4" %>
  <% end %>
</div>
